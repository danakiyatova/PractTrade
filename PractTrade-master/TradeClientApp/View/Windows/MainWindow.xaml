<Window x:Class="TradeClientApp.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodel="clr-namespace:TradeClientApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:Appvm}"
        mc:Ignorable="d"
              WindowStartupLocation="CenterScreen"
          Title="Trade: Главное окно" MinHeight="500" MinWidth="800"
        Width="450" Height="450">
    <Grid>
        <DataGrid
            ItemsSource="{Binding Products}"
            IsReadOnly = "true"
            AutoGenerateColumns="False"
      >

            <DataGrid.Columns >
                <DataGridTextColumn Header="Название" Binding="{Binding TovarName}"/>
                <DataGridTextColumn Header="Описание"  Binding="{Binding TovarDescription}"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding TovarManufacturer}"/>
           
               
      
            </DataGrid.Columns>
            
           
        </DataGrid>
    </Grid>
</Window>
